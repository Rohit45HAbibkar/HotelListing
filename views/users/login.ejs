<% layout("/layouts/boilerplate") %>

<style>
/* Background styling */
.login-page {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

.container.login-page {
    max-width: 100%; /* Full width for the container */
}

/* Form styling */
.login-form {
    width: 100%;
    max-width: 500px; /* Maximum width of the form */
    background-color: #ffffff; /* White background for the form */
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15); /* Box shadow for depth */
}

.login-form h1 {
    font-family: 'Roboto', sans-serif;
    font-weight: bold;
    color: #cc0000; /* Red color for heading */
    text-align: center;
    margin-bottom: 2rem;
}

/* Button styling */
.btn-primary {
    background-color: #cc0000; /* Red color for button */
    border-color: #cc0000; /* Red color for button */
    width: 100%; /* Full width button */
}

.btn-primary:hover {
    background-color: #aa0000; /* Darker shade of red for hover effect */
    border-color: #aa0000; /* Darker shade of red for hover effect */
}

/* Input field focus styling */
.form-control:focus {
    border-color: #cc0000; /* Red color for focus state */
    box-shadow: 0 0 0 0.2rem rgba(204, 0, 0, 0.25); /* Red shadow for focus state */
}

/* Label styling */
.form-label {
    font-weight: 500;
}

/* Input field styling */
.form-control {
    height: auto;
    padding: 0.75rem;
    font-size: 1rem;
}

/* Logo styling */
.logo {
    text-align: center;
    margin-bottom: 1rem;
}

.logo img {
    max-width: 100px; /* Adjust size as needed */
    height: auto;
}

body {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}
</style>

<div class="container login-page">
    <div class="login-form mx-auto">
        <div class="logo">
            <img src="data:image/jpeg;base64," alt="Logo">
        </div>
        <h1>Login</h1>
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control" required />
            </div>
            <button class="btn btn-primary">Login</button>
        </form>
    </div>
</div>
